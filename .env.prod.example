#---- Production App Settings ----
# The API_SERVER_URL is only used to return the complete URL in the result of the job details as specified in OGC.
# Should be the public base URL to the API (e.g., your domain or load balancer)
UMP_SERVER_TIMEOUT=60
UMP_LOG_LEVEL=INFO
UMP_PROVIDERS_FILE=providers.yaml
UMP_API_SERVER_URL=https://your-domain.com/api
UMP_API_SERVER_URL_PREFIX=/api
UMP_REMOTE_JOB_STATUS_REQUEST_INTERVAL=10
UMP_API_SERVER_WORKERS=4

#---- Production Database Settings ----
# Internal container database connections
UMP_DATABASE_NAME=ump
UMP_DATABASE_HOST=api-db
UMP_DATABASE_PORT=5432
UMP_DATABASE_USER=ump
UMP_DATABASE_PASSWORD=CHANGE_ME_SECURE_PASSWORD

#---- Production Geoserver Settings ----
# Internal container URLs for Geoserver communication
UMP_GEOSERVER_URL=http://geoserver:8080/geoserver
UMP_GEOSERVER_DB_HOST=geoserver-db
UMP_GEOSERVER_DB_PORT=5432
UMP_GEOSERVER_DB_NAME=geoserver_results
UMP_GEOSERVER_DB_USER=geoserver
UMP_GEOSERVER_DB_PASSWORD=CHANGE_ME_GEOSERVER_PASSWORD
UMP_GEOSERVER_INTERNAL_DB_HOST=geoserver-db
UMP_GEOSERVER_INTERNAL_DB_PORT=5432
UMP_GEOSERVER_WORKSPACE_NAME=UMP
UMP_GEOSERVER_USER=admin
UMP_GEOSERVER_PASSWORD=CHANGE_ME_GEOSERVER_ADMIN_PASSWORD
# seconds:
UMP_GEOSERVER_CONNECTION_TIMEOUT=120
# minutes:
UMP_JOB_DELETE_INTERVAL=240

#---- Production Keycloak Settings ----
# Internal container URL for Keycloak communication
UMP_KEYCLOAK_URL=http://keycloak:8080/auth
UMP_KEYCLOAK_REALM=UrbanModelPlatform
UMP_KEYCLOAK_CLIENT_ID=ump-client
UMP_KEYCLOAK_USER=ump
UMP_KEYCLOAK_PASSWORD=CHANGE_ME_KEYCLOAK_PASSWORD

#---- Example Modelserver Settings (if using) ----
PYGEOAPI_SERVER_HOST=modelserver
PYGEOAPI_SERVER_PORT_INTERNAL=5000
PYGEOAPI_SERVER_PORT_EXTERNAL=5005

#---- Production Docker Environment Settings ----
# Network for production containers
DOCKER_NETWORK=ump_prod

# External ports for production services
WEBAPP_PORT_EXTERNAL=80
API_DB_PORT_EXTERNAL=5432
GEOSERVER_PORT_EXTERNAL=8080
KEYCLOAK_PORT_EXTERNAL=8080

#---- Production Docker Build Settings ----
# Registry settings - update with your container registry
CONTAINER_REGISTRY=your-registry.com
CONTAINER_NAMESPACE=urban-model-platform
IMAGE_NAME=urban-model-platform
IMAGE_TAG=latest

